{
  "name": "easytask",
  "displayName": "EasyTask",
  "description": "Extensi√≥n para gestionar tareas dentro de un proyecto en Visual Studio Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
		"viewsContainers": {
        "activitybar": [
            {
                "id": "easytask-view",
                "title": "EasyTask",
                "icon": "./out/icon.svg"
            }
        ]
    },
    "views": {
        "easytask-view": [
            {
								"type": "webview",
                "id": "easytask.webView",
								"name": "EasyTask List",
								"icon": "./out/icon.svg"
            }

        ]
    },
    "commands": [
      {
        "command": "extension.mostrarTodoView",
        "title": "Mostrar Tareas"
    }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.86.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9"
  }
}



